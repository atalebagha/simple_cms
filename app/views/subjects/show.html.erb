<%= link_to("<< Back to List", {:action => 'index'} , :class => 'index link') %>

<div class="subjects show">
  <h2>Show Subject</h2>
    <table summary="Subject detail view">
      <tr>
        <th>Name</th>
        <td><%= @subject.name %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= @subject.position %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= @subject.visible ? 'true' : 'false' %></td>
      </tr>
      <tr>
        <th>Created At</th>
        <td><%= @subject.created_at %></td>
      </tr>
      <tr>
        <th>Updated At</th>
        <td><%= @subject.updated_at %></td>
      </tr>
    </table>
</div>